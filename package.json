{
  "name": "kobalte-pigment-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "An open source design system for building SolidJS application.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kobaltedev/pigment.git"
  },
  "license": "MIT",
  "author": "Fabien Marie-Louise <fabienml.dev@gmail.com>",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:libs": "pnpm -F \\!pigment-docs -F \\!pigment-playground build && pnpm i",
    "changeset": "changeset",
    "ci:release": "pnpm build && changeset publish",
    "ci:version": "changeset version && pnpm i --no-frozen-lockfile && git add .",
    "clean": "turbo run clean && rm -rf node_modules",
    "commit": "git-cz",
    "dev:core": "pnpm -F @kobalte/pigment dev",
    "dev:docs": "pnpm -F @kobalte/pigment-docs dev",
    "format": "prettier . --write --ignore-path .gitignore && git update-index --again",
    "prepare": "husky install",
    "storybook": "pnpm -F @kobalte/pigment storybook",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck"
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --write"
    ],
    "package.json": "npx sort-package-json"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "@babel/core": "7.24.7",
    "@babel/preset-env": "7.24.7",
    "@changesets/cli": "2.27.5",
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@commitlint/cz-commitlint": "19.2.0",
    "@jest/types": "29.6.3",
    "@solidjs/testing-library": "0.8.8",
    "@testing-library/dom": "10.1.0",
    "@testing-library/jest-dom": "6.4.6",
    "@testing-library/user-event": "14.5.2",
    "@types/jest": "29.5.12",
    "@types/node": "20.14.2",
    "@types/testing-library__jest-dom": "6.0.0",
    "@typescript-eslint/eslint-plugin": "7.13.0",
    "@typescript-eslint/parser": "7.13.0",
    "babel-preset-solid": "1.8.17",
    "commitizen": "4.3.0",
    "eslint": "9.4.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-simple-import-sort": "12.1.0",
    "eslint-plugin-solid": "0.14.0",
    "husky": "9.0.11",
    "inquirer": "9.2.23",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lint-staged": "15.2.5",
    "prettier": "3.3.2",
    "rollup": "4.18.0",
    "rollup-preset-solid": "2.0.1",
    "solid-js": "1.8.17",
    "sort-package-json": "2.10.0",
    "ts-jest": "29.1.4",
    "tsup": "8.1.0",
    "turbo": "2.0.3",
    "typescript": "5.4.5",
    "vite": "5.2.13",
    "vite-plugin-solid": "2.10.2"
  },
  "packageManager": "pnpm@9.3.0"
}
